				<Battle ID="3510" Count="1" />
			</Condition>			  		
    		<Event ConditionType="IN" Memo="获得令牌了，快去挑战右侧的【南瓜三兄弟】吧" TargetMap="11223" TargetObj="17" TargetName="击败右侧入口t南瓜三兄弟t">			
				<Action Type="COMMAND" Command="OUTPUT_ITEM_2" Params="260046" />
